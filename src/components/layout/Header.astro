<header class="flex justify-between items-center p-4">
  <div class="flex items-center gap-4">
    <img src="img/logo.webp" alt="EpicOasis Logo" class="aspect-11/6 w-20" />
    <h1 class="text-2xl font-bold m-0">EpicOasis</h1>
  </div>
  <a class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" href="/"
    >Inicia Sesion</a
  >
  <div class="absolute size-[200px] bg-amber-300 -z-1 blur-xs"></div>
  <div class="absolute size-[200px] bg-red-200 -z-1 blur-xs rounded-full"></div>
  <div class="absolute size-[200px] bg-gray-500 -z-1 blur-xs"></div>
</header>

<script>
  import { animate, utils,waapi } from "animejs";

  const target = document.querySelector("header"); // Selector corregido

  animate("div.absolute", {
    x: () => utils.random(0, 100) + "vw",
    y: () => utils.random(0, 100) + "vh",
    scale: () => utils.random(0.5, 1.5),
    rotate: () => utils.random(-100, 180) + "deg",
    duration: 1000,
    loop: Infinity,
    onLoop: (self) => self.refresh(),
  });
</script>
