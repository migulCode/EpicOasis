<header class="mainHeader flex justify-between items-center p-4 sticky top-0 z-1">
  <div class="flex items-center gap-4">
    <img src="img/logo.webp" alt="EpicOasis Logo" class="aspect-11/6 w-20" />
    <h1 class="text-2xl font-bold m-0">EpicOasis</h1>
  </div>
  <a class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" href="/"
    >Inicia Sesion</a
  >

</header>

<script>
  import { animate, utils, onScroll } from "animejs";

  animate("div.absolute", {
    backgroundColor: () => {
      const colorNumber = utils.random(0, 2);
      return ["#FF0000", "#00FF00", "#0000FF"][colorNumber];
    },
    x: () => utils.random(0, 100) + "vw",
    y: () => utils.random(0, 100) + "vh",
    scale: () => utils.random(0.5, 1.3),
    rotate: () => utils.random(-100, 180),
    duration: 1000,
    loop: Infinity,
    onLoop: (self) => self.refresh(),
  });

  animate(".mainHeader",{
    duration: 1000,
    easing: "easeInOutQuad",
    backgroundColor: "#91C167",
    autoplay: onScroll({
      container: "body",
      enter: {target: "top+=20", container: "top"},
      leave: {target: "bottom", container: "top"},
      sync: "play reverse",
      debug: true
    }),
   } )


</script>
